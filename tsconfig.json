{
    "compilerOptions": {
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
          "esnext",
          "esnext.asynciterable",
          "dom"
        ],
        "types": [
          "@types/node",
          "@nuxt/types",
          "@types/jest"
        ],
        "rootDirs": ["."],
        "baseUrl": ".",
        "paths": {
          "@components/*": ["components/*"]
        },
        "noImplicitAny": false,
        "experimentalDecorators": true
    },
    "exclude": ["node_modules"]
}